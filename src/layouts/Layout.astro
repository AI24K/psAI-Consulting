---
interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { title, description, keywords } = Astro.props;

import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS } from "../../consts";

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import ContactBox from '../components/ContactBox.astro';
import Footer from '../components/Footer.astro';
import OQVABadge from '../components/OQVABadge.astro';
import MailBubble from '../components/MailBubble.astro';
---

<!doctype html>
<html lang="en">
	<BaseHead 
	title={title ? title : SITE_TITLE}
	description={description ? description : SITE_DESCRIPTION}
	keywords={keywords ? keywords : SITE_KEYWORDS} />

	<body id="home">
		<Header/>

		<MailBubble/>

		<slot/>

		<ContactBox/>

		<Footer/>

		<!-- <OQVABadge/> -->
	</body>
</html>